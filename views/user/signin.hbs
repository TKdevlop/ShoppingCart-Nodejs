<div class="row mt-5 text-center">
    
    <div class="col-md-4 m-md-auto">
        <h1>SIGN IN</h1>
        {{#if hasError}}
        <div class="alert alert-danger">
            {{# each messages}}
            {{this}}
            {{/each}}
        </div>
        {{/if}}
        <form action="/user/Signin" method="post">
              <div class="form-group">
                  <label for="email">E-MAIL</label>
                  <input type="text" id="email" name="email"class="form-control">
              </div>
              <div class="form-group">
                  <label for="password">PASSWORD</label>
                   <input type="text" id="password" name="password"class="form-control">
                   
              </div>
              <input class="d-none"type="text" name="_csrf" value="{{csrfToken}}">
                <button class="btn btn-success btn-block mb-4" type="submit">Sign In</button>
    
        </form>
         <a class="btn btn-block btn-primary btn-facebook btn-lg" href="/user/auth/facebook">
      <i class="fab fa-facebook"></i> Sign in with Facebook
    </a>

    <a class="btn btn-block btn-danger btn-google btn-lg" href="user/auth/google">
      <i class="fab fa-google md-3"></i> Sign in with Google
    </a>
       <p class="lead">Don't have Account Yet SignUp now <a class="btn btn-link" href="/user/Signup">SignUp</a></p> 
    </div>
</div>