<div class="row mt-5 text-center">
    
    <div class="col-md-4 m-md-auto">
        <h1>SIGN IN</h1>
        {{#if hasError}}
        <div class="alert alert-danger">
            {{# each messages}}
            {{this}}
            {{/each}}
        </div>
        {{/if}}
        <form action="/user/Signin" method="post">
              <div class="form-group">
                  <label for="email">E-MAIL</label>
                  <input type="text" id="email" name="email"class="form-control">
              </div>
              <div class="form-group">
                  <label for="password">PASSWORD</label>
                   <input type="password" id="password" name="password"class="form-control">
                   
              </div>
              <input class="d-none"type="text" name="_csrf" value="{{csrfToken}}">
                <button class="btn btn-success btn-block mb-4" type="submit">Sign In</button>
    
        </form>
     

       <p class="lead">Don't have Account Yet SignUp Instead<a style="font-size:20px; padding:0 12px" class="btn btn-link" href="/user/Signup">SignUp</a></p> 
    </div>
</div>